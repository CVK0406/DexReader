<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Base application theme. -->
	<style name="Base.Theme.DexReader" parent="Theme.Material3.DayNight.NoActionBar">

		<!-- Disallow 'Force dark theme' -->
		<item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>

		<!-- Theme Colors -->
		<item name="colorPrimary">@color/dexreader_primary</item>
		<item name="colorPrimaryContainer">@color/dexreader_primaryContainer</item>
		<item name="colorOnPrimary">@color/dexreader_onPrimary</item>
		<item name="colorOnPrimaryContainer">@color/dexreader_onPrimaryContainer</item>
		<item name="colorPrimaryInverse">@color/dexreader_inversePrimary</item>
		<item name="colorSecondary">@color/dexreader_secondary</item>
		<item name="colorSecondaryContainer">@color/dexreader_secondaryContainer</item>
		<item name="colorOnSecondary">@color/dexreader_onSecondary</item>
		<item name="colorOnSecondaryContainer">@color/dexreader_onSecondaryContainer</item>
		<item name="colorTertiary">@color/dexreader_tertiary</item>
		<item name="colorTertiaryContainer">@color/dexreader_tertiaryContainer</item>
		<item name="colorOnTertiary">@color/dexreader_onTertiary</item>
		<item name="colorOnTertiaryContainer">@color/dexreader_onTertiaryContainer</item>
		<item name="colorSurface">@color/dexreader_surface</item>
		<item name="colorSurfaceDim">@color/dexreader_surfaceDim</item>
		<item name="colorSurfaceBright">@color/dexreader_surfaceBright</item>
		<item name="colorSurfaceContainerLowest">@color/dexreader_surfaceContainerLowest</item>
		<item name="colorSurfaceContainerLow">@color/dexreader_surfaceContainerLow</item>
		<item name="colorSurfaceContainer">@color/dexreader_surfaceContainer</item>
		<item name="colorSurfaceContainerHigh">@color/dexreader_surfaceContainerHigh</item>
		<item name="colorSurfaceContainerHighest">@color/dexreader_surfaceContainerHighest</item>
		<item name="colorSurfaceVariant">@color/dexreader_surfaceVariant</item>
		<item name="colorOnSurface">@color/dexreader_onSurface</item>
		<item name="colorOnSurfaceVariant">@color/dexreader_onSurfaceVariant</item>
		<item name="colorSurfaceInverse">@color/dexreader_inverseSurface</item>
		<item name="colorOnSurfaceInverse">@color/dexreader_inverseOnSurface</item>
		<item name="android:colorBackground">@color/dexreader_m3_background</item>
		<item name="m3ColorBackground">@color/dexreader_m3_background</item>
		<item name="m3ColorExploreButton">@color/dexreader_m3_exploreButton</item>
		<item name="m3ColorCardBackground">@color/dexreader_m3_cardBackground</item>
		<item name="m3ColorBottomMenuBackground">@color/dexreader_m3_bottom_menu</item>
		<item name="colorOnBackground">@color/dexreader_onSurface</item>
		<item name="colorError">@color/error</item>
		<item name="colorErrorContainer">@color/errorContainer</item>
		<item name="colorOnError">@color/onError</item>
		<item name="colorOnErrorContainer">@color/onErrorContainer</item>
		<item name="colorOutline">@color/dexreader_outline</item>
		<item name="colorOutlineVariant">@color/dexreader_outline</item>

		<item name="android:divider">@color/dexreader_outline</item>

		<!-- Handles RTL text -->
		<item name="android:textAlignment">gravity</item>
		<item name="android:textDirection">locale</item>

		<!-- Themes -->
		<item name="android:windowLightStatusBar" tools:targetApi="M">@bool/light_status_bar</item>
		<item name="android:statusBarColor">@color/dim</item>
		<item name="android:navigationBarColor">@color/surface_amoled</item>
		<item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@null</item>
		<item name="android:enforceNavigationBarContrast" tools:targetApi="Q">false</item>
		<item name="android:enforceStatusBarContrast" tools:targetApi="Q">false</item>
		<item name="android:itemTextAppearance">@style/TextAppearance.Widget.Menu</item>
		<item name="alertDialogTheme">@style/ThemeOverlay.DexReader.MaterialAlertDialog</item>
		<item name="bottomSheetDialogTheme">@style/ThemeOverlay.DexReader.BottomSheetDialog</item>
		<item name="materialAlertDialogTheme">@style/ThemeOverlay.DexReader.MaterialAlertDialog</item>
		<item name="textAppearanceButton">@style/TextAppearance.DexReader.Button</item>
		<item name="android:buttonStyle">?attr/borderlessButtonStyle</item>
		<item name="android:backgroundDimAmount">0.32</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="actionBarPopupTheme">@style/Widget.Material3.PopupMenu.ListPopupWindow</item>
		<item name="actionModeStyle">@style/Widget.DexReader.ActionMode</item>
		<item name="actionModeCloseDrawable">@drawable/abc_ic_clear_material</item>
		<item name="actionModeWebSearchDrawable">@drawable/abc_ic_search_api_material</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.DexReader</item>
		<item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
		<item name="toolbarStyle">@style/Widget.Material3.Toolbar</item>
		<item name="appBarLayoutStyle">@style/Widget.DexReader.AppBarLayout</item>
		<item name="bottomNavigationStyle">
			@style/Widget.DexReader.BottomNavigationView.ColoredIndicators
		</item>
		<item name="tabStyle">@style/Widget.DexReader.Tabs</item>
		<item name="materialCardViewStyle">@style/Widget.DexReader.CardView.Filled</item>
		<item name="recyclerViewStyle">@style/Widget.DexReader.RecyclerView</item>
		<item name="fastScrollerStyle">@style/Widget.DexReader.FastScroller</item>
		<item name="listItemTextViewStyle">@style/Widget.DexReader.ListItemTextView</item>
		<item name="materialSwitchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch
		</item>
		<item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.M3</item>
		<item name="collapsingToolbarLayoutStyle">@style/Widget.DexReader.CollapsingToolbar</item>
		<item name="circularProgressIndicatorStyle">
			@style/Widget.DexReader.CircularProgressIndicator
		</item>
		<item name="linearProgressIndicatorStyle">@style/Widget.DexReader.LinearProgressIndicator
		</item>
		<item name="bottomSheetDragHandleStyle">@style/Widget.DexReader.BottomSheet.DragHandle</item>
		<item name="android:dropDownSpinnerStyle">@style/Widget.DexReader.Spinner.DropDown</item>
		<item name="m3SpinnerStyle">@style/Widget.DexReader.Material3.Spinner</item>

		<!-- Text appearance -->
		<item name="actionMenuTextAppearance">@style/TextAppearance.DexReader.Menu</item>
		<item name="android:textAppearanceListItem">?attr/textAppearanceBodyLarge</item>
		<item name="android:textAppearanceListItemSecondary">
			@style/TextAppearance.DexReader.Preference.Secondary
		</item>

	</style>

	<!--== Default Theme ==-->
	<style name="Theme.DexReader" parent="Base.Theme.DexReader" />

	<!-- Monet theme only support S+ -->
	<style name="Theme.DexReader.Monet" />

	<style name="ThemeOverlay.DexReader" parent="ThemeOverlay.Material3.Light" />

	<style name="ThemeOverlay.DexReader.Amoled" parent="" />

	<style name="Theme.DexReader.AppWidgetContainer" parent="@style/Theme.MaterialComponents.Light">
		<item name="android:colorBackground">@color/dexreader_background</item>
		<item name="android:panelColorBackground">@color/dexreader_primaryContainer</item>
	</style>
</resources>
